{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "outDir": "./dist",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/",
  ],
  "include": [
    "./*.ts",
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts",
    "src/wx-open-ai.js",
    "src/plugins/msg-format.js",
    "src/db/*.js"
  ],
  "ts-node": {
    "esm": true
  }
}